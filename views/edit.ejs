<% include ./partials/header %>
<div class="ui main text container segment">
  <img src="/img/sprites/<%=pokemon.number%>.png">
  <div class="ui huge header">Edit <%= pokemon.name%></div>
  <form class="ui form" action="/collection/<%= pokemon._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Name</label>
      <input type="text" name="pokemon[name]" value="<%=pokemon.name%>">
    </div>
    <div class="field">
      <label>Body</label>
      <textarea name="pokemon[comments]" placeholder="pokemon post goes here" required><%= pokemon.comments %></textarea>
    </div>
    <input class="ui violet big basic button" type="submit">
  </form>
</div>

<% include ./partials/footer %>