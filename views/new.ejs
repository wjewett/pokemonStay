<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header">Add a new Pokémon to your collection</div>
  <p>Generations I-VI (or through National Pokédex #721) only.</p>
  <form class="ui form" action="/collection" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="searchMon" placeholder="Enter name or number of Pokémon" required>
    </div>

    <div class="field">
      <label>Comments</label>
      <textarea name="comments" placeholder="Comments/Details..."></textarea>
    </div>
    <input class="ui green button show-buttons" type="submit">
    <a class="ui blue button show-buttons" href="/collection">Back</a>
  </form>
</div>

<% include ./partials/footer %>